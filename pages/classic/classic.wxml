<!-- pages/classic/classic.wxml -->
<view class="container">
    <view class="header">
        <v-epsoide index="{{classic.index}}" class="epsoide" />
        <v-like like="{{classic.like_status}}" class="like" bind:like="onLike" count="{{classic.fav_nums}}" />
    </view>
    <v-movie img="{{classic.image}}" content="{{classic.content}}"></v-movie>
    <v-navi class="navi" bind:left="onNext" bind:right="onPrevious" title="{{classic.title}}" first="{{first}}" latest="{{latest}}" />
</view>